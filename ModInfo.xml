	<!-- ColorInArchetypeConfig -->
	<remove game="GalacticAdventures">Empire-Details-on-Star-Info_ColorInArchetype_Config.package</remove>
	<remove game="GalacticAdventures">Empire-Details-on-Star-Info_NoColorInArchetype_Config.package</remove>
	<!-- ColorInStarNameConfig -->
	<remove game="GalacticAdventures">Empire-Details-on-Star-Info_ColorInStarName_Config.package</remove>
